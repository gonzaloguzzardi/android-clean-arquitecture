<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/view_holder_post_horizontal_margins"
    android:layout_marginTop="@dimen/view_holder_post_vertical_margins"
    android:layout_marginEnd="@dimen/view_holder_post_horizontal_margins"
    android:layout_marginBottom="@dimen/view_holder_post_vertical_margins"
    android:orientation="vertical">

    <TextView
        android:id="@+id/post_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        tools:text="How to automatically create images for responsive design" />

    <TextView
        android:id="@+id/post_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/view_holder_post_subtitle_margin_top"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        tools:text="Danno - 25m" />

</LinearLayout>